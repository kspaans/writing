{
  "version": 2,
  "builds": [
    { "src": "public/**/*.html", "use": "@now/static" },
    { "src": "public/*.css", "use": "@now/static" },
    { "src": "public/*.js", "use": "@now/static" }
  ],
  "routes": [
    { "src": "^/", "dest": "/public/index.html" },
    { "src": "^/posts/(.*)", "dest": "/public/posts/$1" },
    { "src": "^/(.*)", "dest": "/public/$1" }
  ]
}
